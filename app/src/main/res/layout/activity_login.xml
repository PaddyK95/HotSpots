<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffa033"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/emailTf"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_above="@+id/passwordTf"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@layout/login_tf"
        android:ems="10"
        android:hint="email"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textColorHint="@color/colorWhite"
        android:textColorLink="#FFFFFF" />

    <EditText
        android:id="@+id/passwordTf"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_above="@+id/loginBtn"
        android:layout_alignStart="@+id/emailTf"
        android:layout_marginBottom="10dp"
        android:background="@layout/login_tf"
        android:ems="10"
        android:hint="password"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColorHint="@color/colorWhite" />

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="123dp"
        android:layout_height="47dp"

        android:layout_alignEnd="@+id/emailTf"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="128dp"
        android:layout_marginBottom="94dp"
        android:background="#ff6868"
        android:text="@string/login"
        android:textColor="@color/colorWhite" />

    <Button
        android:id="@+id/registerBtn"
        android:layout_width="122dp"
        android:layout_height="46dp"

        android:layout_alignEnd="@+id/emailTf"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-4dp"
        android:layout_marginBottom="95dp"
        android:background="@color/colorSecondary"
        android:text="@string/register"
        android:textColor="@color/colorWhite" />

    <ImageView
        android:id="@+id/Logo"
        android:layout_width="152dp"
        android:layout_height="175dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="115dp"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="161dp"
        android:text="@string/app_name"
        android:textColor="#FFFFFF"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/forgotTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/emailTf"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="91dp"
        android:layout_marginBottom="59dp"
        android:text="Forgot Password?"
        android:textSize="20sp" />


</RelativeLayout>
